#!/bin/bash

if [[ -z $1 && $1 != "CNCLD" ]]; then
  echo "Usage: shellos-theme-set <theme-name>"
  exit 1
fi

THEMES_DIR="$HOME/.config/shellos/themes/"
CURRENT_THEME_DIR="$HOME/.config/shellos/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
shellos-theme-bg-next

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  shellos-restart-waybar
fi
shellos-restart-swayosd
hyprctl reload
pkill -SIGUSR2 btop
makoctl reload

# Change gnome, browser, vscode, cursor themes
shellos-theme-set-terminal
shellos-theme-set-gnome
shellos-theme-set-browser
shellos-theme-set-vscode
shellos-theme-set-cursor

# Call hook on theme set
shellos-hook theme-set "$THEME_NAME"
